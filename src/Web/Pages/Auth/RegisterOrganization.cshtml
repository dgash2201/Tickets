@page
@model RegisterOrganizationModel
@{
    ViewData["Title"] = "Registration";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<p class="mb-3">Register as an organization to sell tickets to your events</p>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
        <strong>@Model.ErrorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post" class="mb-3">
    <div class="mb-3">
        <label class="form-label" asp-for="Login">Login</label>
        <input type="text" class="form-control" asp-for="Login" />
        <span class="text-danger" asp-validation-for="Login"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="Inn">INN</label>
        <input type="text" class="form-control" asp-for="Inn" />
        <span class="text-danger" asp-validation-for="Inn"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Ogrn">OGRN</label>
        <input type="text" class="form-control" asp-for="Ogrn"/>
        <span class="text-danger" asp-validation-for="Ogrn"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="Password">Password</label>
        <input type="password" class="form-control" asp-for="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="ConfirmPassword">Confirm password</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    
    <div>
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>

<div class="mb-3">
    <a asp-area="" asp-page="/Auth/RegisterOrganization">Register as a user</a>
</div>

<div>
    <a asp-area="" asp-page="/Auth/Login">Login</a>
</div>