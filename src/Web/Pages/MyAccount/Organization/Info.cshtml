@page
@model InfoModel
@{
    ViewData["Title"] = "Organization information";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<div>
    @if (Model.Organization is not null)
    {
        <div class="mb-3">
            <label class="form-label" asp-for="Organization!.Login">Login</label>
            <input type="text" class="form-control" asp-for="Organization!.Login" readonly/>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Organization!.Name">Name</label>
            <input type="text" class="form-control" asp-for="Organization!.Name" readonly/>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Organization!.Inn">INN</label>
            <input type="text" class="form-control" asp-for="Organization!.Inn" readonly/>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Organization!.Ogrn">OGRN</label>
            <input type="text" class="form-control" asp-for="Organization!.Ogrn" readonly/>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Organization!.Description">Description</label>
            <textarea class = "form-control" asp-for="Organization!.Description" readonly></textarea>
        </div>
    }
</div>