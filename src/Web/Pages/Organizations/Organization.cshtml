@page
@model Web.Pages.Organizations.Organization

@{
    ViewData["Title"] = "Organizations";
}

<div class="row mt-4">
    <div class="col-2">
        <img src="/standupclub.jpg" class="rounded float-start" style="width: 200px; height: 200px; object-fit: cover" alt="">
    </div>
    <div class="col-10">
        <div class="fs-4 fw-bold">
            <p>
                @Model.OrganizationDto?.Name
            </p>
        </div>
        <div class="fs-6">
            <p class="text-break">
                @Model.OrganizationDto?.Description
            </p>
        </div>
    </div>
</div>

@if (Model.FutureEvents is not null && Model.FutureEvents.Any())
{
    <div class="row mt-5">
        <p class="fs-4">
            Future events:
        </p>
    </div>

    @foreach (var _event in Model.FutureEvents)
    {
        <div class="row mt-4">
            <div class="col-2">
                <img src="/@_event.ImageName" class="rounded float-start" style="width: 200px; height: 200px; object-fit: cover" alt="">
            </div>
            <div class="col-10">
                <div class="fs-4 fw-bold">
                    <p>
                        <a asp-page="/Events/Event" asp-route-id="@_event.Id" style="color: black">@_event.Title</a>
                    </p>
                </div>
                <div class="fs-6">
                    <p class="text-break">
                        @_event.Description
                    </p>
                </div>
                <div class="fs-6">
                    <p>
                        @_event.Date
                    </p>
                </div>
                <div class="fs-6">
                    <p>
                        <a asp-page="/Organizations/Organization" asp-route-id="@_event.OrganizationId">@_event.OrganizationName</a>
                    </p>
                </div>
            </div>
        </div>
    }
}