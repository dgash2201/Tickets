@page
@model Web.Pages.Events.Search

@{
    ViewData["Title"] = "Events";
}

<form method="GET">
    <div class="row">
        <label class="col-form-label col-auto" for="search">Search</label>
        <div class="form-group col-3">
            <input type="text" class="form-control" name="search" id="search">
        </div>
        <div class="form-group col-auto">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

@if (Model.Events is not null)
{
    @foreach (var _event in Model.Events)
    {
        <div class="row mt-4">
            <div class="col-2">
                <img src="/@_event.ImageName" class="rounded float-start" style="width: 200px; height: 200px; object-fit: cover" alt="">
            </div>
            <div class="col-10">
                <div class="fs-4 fw-bold">
                    <p>
                        <a asp-page="/Events/Event" asp-route-id="@_event.Id" style="color: black">@_event.Title</a>
                    </p>
                </div>
                <div class="fs-6">
                    <p class="text-break">
                        @_event.Description
                    </p>
                </div>
                <div class="fs-6">
                    <p>
                        @_event.Date
                    </p>
                </div>
                <div class="fs-6">
                    <p>
                        <a asp-page="/Organizations/Organization" asp-route-id="@_event.OrganizationId">@_event.OrganizationName</a>
                    </p>
                </div>
            </div>
        </div>
    }
}